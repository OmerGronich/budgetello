{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@budgetello/front-end-shared-ui-async-autofocus": [
        "libs/front-end/shared/ui/async-autofocus/src/index.ts"
      ],
      "@budgetello/front-end-shared-ui-base-input": [
        "libs/front-end/shared/ui/base-input/src/index.ts"
      ],
      "@budgetello/front-end-shared-ui-datepicker": [
        "libs/front-end/shared/ui/datepicker/src/index.ts"
      ],
      "@budgetello/front-end-shared-ui-kanban-board": [
        "libs/front-end/shared/ui/kanban-board/src/index.ts"
      ],
      "@budgetello/front-end-shared-ui-password-input": [
        "libs/front-end/shared/ui/password-input/src/index.ts"
      ],
      "@budgetello/front-end-shared-ui-text-input": [
        "libs/front-end/shared/ui/text-input/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
